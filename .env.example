# Contoh file .env untuk pengaturan lokal
# Salin file ini menjadi .env dan sesuaikan nilai-nilainya sebelum menjalankan aplikasi.

APP_NAME="PKK-BKL"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=root
DB_PASSWORD=
DB_FOREIGN_KEYS=true

# Cache / Session / Queue
CACHE_STORE=file
SESSION_DRIVER=database
SESSION_LIFETIME=120
QUEUE_CONNECTION=database

# Filesystem
FILESYSTEM_DISK=public

# Mail (ses / postmark / smtp)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=hello@example.com
MAIL_FROM_NAME="PKK BKL"
POSTMARK_TOKEN=
RESEND_KEY=

# AWS (S3) - hanya jika digunakan
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_URL=

# Redis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Cloudflare Turnstile (captcha)
# Sesuaikan dengan yang dipakai di config/services.php: TURNSTILE_SITE_KEY / TURNSTILE_SECRET_KEY
TURNSTILE_SITE_KEY=your_site_key_here
TURNSTILE_SECRET_KEY=your_secret_key_here

# Optional / integrations (Slack, Papertrail, etc.)
SLACK_BOT_USER_OAUTH_TOKEN=
SLACK_BOT_USER_DEFAULT_CHANNEL=
PAPERTRAIL_URL=
PAPERTRAIL_PORT=

# Other app-specific overrides
APP_LOCALE=id
APP_FALLBACK_LOCALE=en
